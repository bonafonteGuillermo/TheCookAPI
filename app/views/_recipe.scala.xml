@(recipe: Recipe)
<recipe>
    <id>@recipe.getId()</id>
    <version>@recipe.getVersion()</version>
    <whenCreated>@recipe.getWhenCreated()</whenCreated>
    <whenUpdated>@recipe.getWhenUpdated()</whenUpdated>
    <name>@recipe.getName()</name>
    <recipeDetails>
        <imageURL>@recipe.getDetails().getImageURL()</imageURL>
        <description>@recipe.getDetails().getDescription()</description>
    </recipeDetails>
</recipe>